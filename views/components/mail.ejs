<div ng-controller="MailCtrl as mail">
  <md-list>
    <md-subheader>Unread Messages</md-subheader>
    <md-list-item class="md-3-line" ng-repeat="message in mail.list">
      <i class="md-avatar material-icons md-light md-48">face</i>
      <div class="md-list-item-text" layout="column">
        <h3>{{ message.sender }}</h3>
        <h4>{{ message.title }}</h4>
        <p>{{ message.body }}</p>
      </div>
      <md-divider ng-if="!$last"></md-divider>
    </md-list-item>
  </md-list>
  <md-button class="md-raised md-primary" ng-click="mail.add()" >Add a message</md-button>
  <md-button>
    Empty database
    <md-tooltip md-visible="mail.showTooltip" md-direction="top" ng-mouseenter="mail.showTooltip = true" ng-mouseleave="mail.showTooltip = false">
      You do not have rights.
    </md-tooltip>
  </md-button>
</div>
